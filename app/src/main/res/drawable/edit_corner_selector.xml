<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#80DDDDDD"/>
            <stroke
                android:width="3dp"
                android:color="#808080"/>
            <corners
                android:radius="24dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#DDDDDDDD"/>
            <stroke
                android:width="3dp"
                android:color="#808080"/>
            <corners
                android:radius="24dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>