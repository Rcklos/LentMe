<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="8dp"/>
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <solid android:color="#2196F3"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="8dp"/>
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <solid android:color="#1e88e5"/>
        </shape>
    </item>

</selector>