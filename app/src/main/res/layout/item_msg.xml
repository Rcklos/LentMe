<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/item_msg_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:background="@drawable/chat_white_bubble_left">

        <TextView
            android:id="@+id/item_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="16"
            android:padding="0dp"
            android:text="..."
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_msg_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_blue_bubble_right">

        <TextView
            android:id="@+id/item_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="16"
            android:padding="0dp"
            android:text="..."
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>